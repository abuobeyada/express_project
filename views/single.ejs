<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-md-6">
      <a href="/" class="btn btn-sm btn-primary mb-2">Back</a>
      <div class="card">
        <div class="card-body">
          <h2><%= product.name %></h2>
          <img
            style="
              width: 100%;
              height: 400px;
              object-fit: cover;
              border-radius: 5px;
            "
            src="/products/<%= product.photo %>"
            alt=""
          />
          <p class="my-3 fs-3"><%= product.regularprice %> BDT</p>
        </div>
      </div>
    </div>
  </div>
</div>
